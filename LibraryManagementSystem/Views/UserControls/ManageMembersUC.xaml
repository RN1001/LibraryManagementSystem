<UserControl x:Class="LibraryManagementSystem.Views.UserControls.ManageMembersUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryManagementSystem.Views.UserControls"
             mc:Ignorable="d" 
            d:DesignHeight="150" d:DesignWidth="100">
    <Grid>
        <Button x:Name="AddMemberBtn" Content="Add Member" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="25" Click="AddMemberBtn_Click"/>
        <Button x:Name="UpdateMemberBtn" Content="Update Member" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0" Width="100" Height="25" Click="UpdateMemberBtn_Click"/>
        <Button x:Name="DeleteMemberBtn" Content="Delete Member" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,80,0,0" Width="100" Height="25" Click="DeleteMemberBtn_Click"/>
    </Grid>
</UserControl>
